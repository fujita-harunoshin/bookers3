<!DOCTYPE html>
<html>
  <head>
    <title>Bookers3</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/f083d48cc8.js" crossorigin="anonymous"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="mb-4">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/">
            <span>Bookers</span>
          </a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
              <li class="nav-item">
                <a class="nav-link text-light" href=<%= user_path(current_user.id) %>><span><i class="fas fa-home"></i></span> Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-light" href=<%= users_path %>><span><i class="fas fa-users"></i></span> Users</a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-light" href=<%= books_path %>><span><i class="fas fa-book-open"></i></span> Books</a>
              </li>
              <li class="nav-item">
                <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link text-light' do %>
                  <span><i class="fas fa-sign-out-alt"></i></span> Log out
                <% end %>
                <!--<a class="nav-link text-light" href=<%= destroy_user_session_path %>><span><i class="fas fa-sign-out-alt"></i></span> Log out</a>-->
              </li>
              <% else %>
              <li class="nav-item">
                <a class="nav-link text-light" href=<%= root_path %>><span><i class="fas fa-home"></i></span> Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-light" href=<%= about_path %>><span><i class="fas fa-link"></i></span> About</a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-light" href=<%= new_user_registration_path %>><span><i class="fas fa-user-plus"></i></span> Sign up</a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-light" href=<%= new_user_session_path %>><span><i class="fas fa-sign-in-alt"></i></span> Log in</a>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <div class="container px-5 px-sm-0">
      <% flash.each do |key, value| %>
        <p><%= content_tag(:div, value, class: "#{key}") %></p>
      <% end %>
    </div>
    <%= yield %>
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
