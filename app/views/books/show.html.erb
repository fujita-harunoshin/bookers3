<main>
  <div class="container px-5 px-sm-0">
    <% if @new_post_comment.errors.any? %>
    <div class="error_explanation">
      <ul class="alert alert-danger" role="alert">
      <h6 class="alert-heading">
      <%= @new_post_comment.errors.count %> errors prohibited this obj from being saved:
      </h6>
      <ul>
      <% @new_post_comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
    <% end %>
    <div class="row">
      <!--userのshowページの左側-->
      <div class="col-md-3">
        <%= render 'user_info', user: @user %>
        <div class="row">
          <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block" do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        </div>
        <h2 class="mt-3">New book</h2>
        <%= form_with model: @new_book do |f| %>
          <div class="form-group">
            <label for="book_title">Title</label>
            <%= f.text_field :title, class:"form-control" %>
          </div>
          <div class="form-group">
            <label for="book_opinion">Opinion</label>
            <%= f.text_area :body, class:"form-control", rows:"3" %>
          </div>
          <div class="form-group">
            <%= f.submit 'Create Book', class:"btn btn-success" %>
          </div>
        <% end %>
      </div>
      <!--userのshowページの右側-->
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@book.user.id) do %>
                  <%= image_tag @book.user.get_profile_image(100, 100) %>
                  <br>
                  <%= @book.user.name %>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(@book.id) do %>
                  <%= @book.title %>
                <% end %>
              </td>
              <td>
                <%= @book.body %>
              </td>
              <td>
                <% if @book.favorited_by?(current_user) %>
                  <p>
                    <%= link_to book_favorites_path(@book), method: :delete, class:"text-danger" do %>
                      <i class="fa-solid fa-heart"></i><%= @book.favorites.count %>
                    <% end %>
                  </p>
                  <% else %>
                  <p>
                    <%= link_to book_favorites_path(@book), method: :post, class:"text-primary" do %>
                      <i class="fa-solid fa-heart"></i><%= @book.favorites.count %>
                    <% end %>
                  </p>
                <% end %>
              </td>
              <td>
                <p>コメント数：<%= @book.post_comments.count %></p>
              </td>
              <% if @book.user == current_user %>
              <td>
                <%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-sm btn-success" %>
              </td>
              <td>
                <%= link_to "Destroy", book_path(@book.id), method: :delete, class:"btn btn-sm btn-danger" %>
              </td>
              <% end %>
            </tr>
          </tbody>
        </table>
        <div class="col-md-11 ml-auto">
          <h3>Comments</h3>
          <% if @book.post_comments.count == 0 %>
            <div class="row">
              <div class="col-md-11 ml-auto">
                <h5>No comments</h4>
              </div>
            </div>
          <% end %>
          <table class="table">
            <% @post_comments.each do |post_comment| %>
            <tr>
              <td>
                <%= link_to user_path(post_comment.user.id) do %>
                  <%= image_tag post_comment.user.get_profile_image(80, 80) %>
                  <br>
                  <%= post_comment.user.name %>
                <% end %>
              </td>
              <td>
                <p><%= post_comment.comment %></p>
              </td>
              <% if post_comment.user == current_user %>
              <td>
                <%= link_to "Destroy", book_post_comment_path(post_comment), method: :delete, class:"btn btn-sm btn-danger" %>
              </td>
              <% end %>
            </tr>
            <% end %>
          </table>
          <%= form_with model: [@book, @new_post_comment] do |f| %>
          <div class="form-group">
            <label for="new_post_comment_comment">コメントを投稿する（1文字以上）</label>
            <%= f.text_area :comment, rows: '5', class:"form-control" %>
          </div>
          <div class="form-group">
            <%= f.submit '投稿', class:"btn btn-success" %>
          </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</main>
