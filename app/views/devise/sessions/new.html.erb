<div class="container">
  <div class="row">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
      <h4 class="text-dark bg-light py-4 mb-0">Log in</h4>
      <div class="form-body p-4">
        <div class="mx-auto text-center">
          <p>ユーザー名と<br>パスワードを入力してください。</p>
        </div>
        <%= form_with model: @user, url: user_session_path do |f| %>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text">
                <i class="fas fa-user"></i>
              </span>
            </div>
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control", placeholder: "ユーザー名", id:"inputName" %>
          </div>
        
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text">
                <i class="fas fa-lock"></i>
              </span>
            </div>
            <%= f.password_field :password, autocomplete: "current-password", class:"form-control", placeholder: "パスワード" %>
          </div>

          <%= f.submit "Log in", class:"btn btn-lg btn-block btn-info mt-5" %>
        <% end %>
      </div>
    </div>
  </div>
</div>